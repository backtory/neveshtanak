<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InsetText">
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="TextView_NotImportant">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/link_color</item>
    </style>

    <style name="StyledDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="InsetText.CharCount" parent="@style/InsetText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/secondary_text</item>
    </style>

    <style name="Button.Action" parent="@style/Button">
        <item name="android:background">#FF0099FF</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>

    <style name="Button" parent="@style/InsetText">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
    </style>

    <style name="List_row">
        <item name="android:textColor">@color/list_item_text</item>
        <item name="android:background">@drawable/list_row_background</item>
        <item name="android:padding">4dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">44dip</item>
    </style>

    <style name="colored_dot">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#727272</item>
        <item name="android:text">@string/dot</item>
    </style>

</resources>